<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.huhx0015.screencolortester.presentation.ui.activities.ColorActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/color_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/color_test_button"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/color_floating_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:elevation="2dp"
        app:layout_anchor="@id/color_recycler_view"
        app:layout_anchorGravity="bottom|right|end"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorAccent"
        fab:menu_colorRipple="@color/colorPrimaryDark"
        fab:menu_shadowColor="#000"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_animationDelayPerItem="0"
        fab:menu_labels_maxLines="2"
        fab:menu_labels_ellipsize="end"
        android:layout_gravity="bottom|end">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@android:color/black"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_black"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorDarkGray"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_dark_gray"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorGray"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_gray"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorLightGray"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_light_gray"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_white"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@android:color/holo_red_light"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_red"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorGreen"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_green"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_blue"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorYellow"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_yellow"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_cyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorCyan"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_cyan"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_magenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorMagenta"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_magenta"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/color_fab_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_random"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_shadowColor="#000"
            fab:fab_size="mini"
            fab:fab_label="@string/fab_random"/>

    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
