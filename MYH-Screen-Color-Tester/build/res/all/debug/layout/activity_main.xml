<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appLogo"
            android:layout_alignParentStart="false"
            android:background="@drawable/YCLogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:id="@+id/bRed"
                android:layout_gravity="center"
            android:layout_below="@+id/appLogo"
            android:layout_alignParentLeft="true" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:id="@+id/bBlue"
                android:layout_gravity="center"
            android:layout_below="@+id/appLogo"
            android:layout_toRightOf="@+id/bGreen" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"
                android:id="@+id/bGreen"
                android:layout_gravity="center"
            android:layout_below="@+id/appLogo"
            android:layout_toRightOf="@+id/bRed" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brown"
                android:id="@+id/bBrown"
                android:layout_gravity="center"
            android:layout_below="@+id/appLogo"
            android:layout_toRightOf="@+id/bBlue" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pink"
                android:id="@+id/bPink"
                android:layout_gravity="left|center_vertical"
            android:layout_alignTop="@+id/bPurple"
            android:layout_toRightOf="@+id/bPurple" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:id="@+id/bPurple"
                android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/bBlue"
            android:layout_alignLeft="@+id/bBlack" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black"
                android:id="@+id/bBlack"
                android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/bPurple"
            android:layout_alignParentLeft="true" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grey"
                android:id="@+id/bGrey"
                android:layout_gravity="left|center_vertical"
            android:layout_alignTop="@+id/bPurple"
            android:layout_toLeftOf="@+id/bBlack" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White"
                android:id="@+id/bWhite"
                android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/bBlue"
            android:layout_centerHorizontal="true" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random!"
                android:id="@+id/bRandom"
                android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/bPink"
            android:layout_alignLeft="@+id/bPink" />

    </RelativeLayout>

</RelativeLayout>
